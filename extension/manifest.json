{
  "manifest_version": 3,
  "name": "Linear RTL Support",
  "version": "0.1.0",
  "description": "Fixes RTL text display in Linear.app fields (Hebrew/Arabic) without changing app direction.",
  "author": "Tech Digital Powerhouse <support@tech.co.il>",
  "homepage_url": "https://tech.co.il",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png",
    "256": "icons/icon-256.png",
    "512": "icons/icon-512.png"
  },
  "content_scripts": [
    {
      "matches": ["https://linear.app/*"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ]
}
